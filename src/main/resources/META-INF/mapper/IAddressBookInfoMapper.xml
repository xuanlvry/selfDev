<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.my.test.mybatis.IAddressBookMapper">
    <insert id="insert" parameterType="com.my.test.AddressBookInfo" useGeneratedKeys="true" keyProperty="id">
        insert into test.address_book
        (userIdentifier,tel,name,email,updateTime,createTime)
        values
        (#{userIdentifier},#{tel},#{name},#{email},#{updateTime},#{createTime})
    </insert>

    <update id="update" parameterType="com.my.test.AddressBookInfo">
        update test2.address_book
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="email != null">email = #{email},</if>
            <if test="tel != null">tel = #{tel},</if>
            updateTime = current_timestamp()
        </set>
        where id = #{id};
    </update>
</mapper>