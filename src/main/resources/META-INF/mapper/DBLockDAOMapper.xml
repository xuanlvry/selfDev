<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.my.test.dbLock.DBLockDAO">
    <update id="updateAmount" parameterType="map">
        update test.user
        <set>
            <if test="amount != null">amount = #{amount},</if>
        </set>
        where id = #{id};
    </update>

    <select id="selectById" parameterType="int" resultType="com.my.test.UserInfo">
        SELECT * FROM test.user WHERE id = #{id}
    </select>

    <select id="selectByIdForUpdate" parameterType="int" resultType="com.my.test.UserInfo">
        SELECT * FROM test.user WHERE id = #{id} FOR UPDATE;
    </select>

    <select id="begin">
        begin;
    </select>

    <select id="commit">
        commit;
    </select>
</mapper>