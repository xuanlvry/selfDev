	<context:annotation-config />

	<!-- 设置@AspectJ支持 -->
	<aop:aspectj-autoproxy />

	<!-- 从dp-common-service中导出的 begin -->
	<bean id="parentDao" class="org.springframework.aop.framework.ProxyFactoryBean" abstract="true">
		<property name="target">
			<bean class="com.my.test.springaop.proxyfactorybean.WorkImpl"/>
		</property>
		<property name="proxyInterfaces" value="com.my.test.springaop.proxyfactorybean.IWork" />
		<property name="interceptorNames">
			<list>
				<value>advisor</value>
			</list>
		</property>
	</bean>

	<bean id="workProxy" class="com.my.test.springaop.proxyfactorybean.WorkProxy"/>

	<bean id="advisor" class="org.springframework.aop.aspectj.AspectJExpressionPointcutAdvisor">
		<property name="advice" ref="workProxy"/>
		<property name="expression" value="execution(* com.my.test.springaop..*.*(..))"/>
	</bean>

